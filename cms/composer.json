{
  "require": {
    "craftcms/cms": "^3.6.9",
    "haariga/craft-gonzo": "^1.0@beta",
    "nystudio107/craft-fastcgicachebust": "^1.0.0",
    "nystudio107/craft-imageoptimize": "^1.0.0",
    "nystudio107/craft-minify": "^1.2.5",
    "nystudio107/craft-retour": "^3.0.0",
    "nystudio107/craft-seomatic": "^3.2.0",
    "nystudio107/craft-templatecomments": "^1.0.0",
    "nystudio107/craft-twigpack": "^1.2.9",
    "nystudio107/craft-typogrify": "^1.1.4",
    "nystudio107/craft-webperf": "^1.0.0",
    "vlucas/phpdotenv": "^3.4.0",
    "yiisoft/yii2-redis": "^2.0.6"
  },
  "repositories": [
    {
      "type": "path",
      "url": "../../craft-gonzo"
    }
  ],
  "require-dev": {
    "yiisoft/yii2-shell": "^2.0.3"
  },
  "autoload": {
    "psr-4": {
      "modules\\sitemodule\\": "modules/sitemodule/src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php":  "7.2.5"
    }
  },
  "scripts": {
    "craft-update": [
      "@pre-craft-update",
      "@post-craft-update"
    ],
    "pre-craft-update": [
      "mkdir -p ./cms/storage",
      "mkdir -p ./cms/config/project",
      "mkdir -p ./cms/web/cpresources",
      "mkdir -p ./cms/web/assets"
    ],
    "post-craft-update": [
      "@php craft install/check && php craft migrate/all --no-content || exit 0",
      "@php craft install/check && php craft project-config/apply --force || exit 0",
      "@php craft install/check && php craft migrate --track=content || exit 0",
      "@php craft install/check && php craft clear-caches/compiled-templates || exit 0",
      "@php craft install/check && php craft clear-caches/data || exit 0",
      "@php craft install/check && php craft clear-caches/temp-files || exit 0"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php craft setup/welcome"
    ],
    "pre-update-cmd": "@pre-craft-update",
    "pre-install-cmd": "@pre-craft-update",
    "post-update-cmd": "@post-craft-update",
    "post-install-cmd": "@post-craft-update"
  }
}
